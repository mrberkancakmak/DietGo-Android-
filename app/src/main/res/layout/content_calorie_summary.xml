<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hakber.dietgo.calorieSummary"
    tools:showIn="@layout/activity_calorie_summary">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:stretchColumns="0"
        android:id="@+id/tlTable01">

        <TableRow
            android:background="#135f5e5e"
            android:paddingBottom="1dp"
            android:paddingRight="1dp">
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:text="Top. Tüketilen"
                android:textStyle="bold"
                android:layout_span="1"
                android:textAlignment="center" />
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:text="Önerilen"
                android:textStyle="bold"
                android:layout_span="1"
                android:textAlignment="center" />
        </TableRow>

        <TableRow android:background="#13f5f5f5"
            android:paddingBottom="5dp">
            <TextView
                android:padding="20dp"
                android:text="0 kcal"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFF"
                android:layout_span="1"
                android:textAlignment="center"
                android:layout_marginLeft="1dp" />
            <TextView
                android:padding="20dp"
                android:text="       0 kcal         "
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_span="1"
                android:textColor="@color/background_floating_material_light"
                android:textAlignment="center"
                android:theme="@style/AppTheme.NoActionBar"
                android:layout_marginLeft="1dp" />


        </TableRow>
    </TableLayout>
</RelativeLayout>
